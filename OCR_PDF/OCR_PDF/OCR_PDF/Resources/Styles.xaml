<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"         
                    xmlns:sf="http://schemas.syncfusion.com/wpf"
                    >
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary>
            <Style x:Key="AppCommonStyles" TargetType="Control">
                <Setter Property="Padding" Value="5,5,5,5"/>
                <Setter Property="Margin" Value="5,5,5,5"/>
                <Setter Property="Background" Value="Red"/>
            </Style>
            <Style TargetType="{x:Type sf:ButtonAdv}" BasedOn="{StaticResource AppCommonStyles}"/>
            <Style TargetType="TextBox" BasedOn="{StaticResource AppCommonStyles}"/>
            <Style TargetType="Label" BasedOn="{StaticResource AppCommonStyles}"/>
            <Style TargetType="CheckBox" BasedOn="{StaticResource AppCommonStyles}"/>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>