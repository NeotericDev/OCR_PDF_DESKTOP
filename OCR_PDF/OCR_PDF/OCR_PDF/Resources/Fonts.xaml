<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OCR_PDF.Resources">

    <FontFamily x:Key="DefaultFontFamiliy">pack://application;,,,/Resources/Fonts/#Alegreya Sans SC Light</FontFamily>


    <Style x:Key="BaseStyleFont" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamiliy}"></Setter>
        <Setter Property="FontSize" Value="25"></Setter>
    </Style>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyleFont}"></Style>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyleFont}"></Style>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyleFont}"></Style>
</ResourceDictionary>